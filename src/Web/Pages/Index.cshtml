@page
@model Web.Pages.IndexModel
@{
    ViewData["Title"] = "Home";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Poster</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-light">

<div class="container py-4" style="max-width: 600px;">
    <h4 class="fw-bold mb-4">Latest Posts</h4>

    @foreach (var post in Model.Posts)
    {
        <div class="card shadow-sm mb-3">
            <div class="card-body">

                <!-- Post Header -->
                <div class="d-flex align-items-center mb-2">
                    <a asp-page="/User/Details" asp-route-id="@post.AuthorUsername">
                        <img src="@Url.Content("~/" + post.AuthorAvatarPath)" 
                             class="rounded-circle me-2" width="40" height="40" alt="Avatar" />
                    </a>
                    <div>
                        <a asp-page="/User/Details" asp-route-id="@post.AuthorUsername" 
                           class="fw-semibold text-decoration-none text-dark">
                            @post.AuthorUsername
                        </a>
                        <br />
                        <small class="text-muted">@post.CreatedAt.ToString("MMM d, yyyy 'at' h:mm tt")</small>
                    </div>
                </div>

                <!-- Post Content (clickable only if clicked, but text selectable) -->
                <p class="mb-2">
                    <a asp-page="/Posts/Details" asp-route-id="@post.Id" 
                       class="text-decoration-none text-dark" 
                       style="white-space: pre-wrap;">@post.Content</a>
                </p>

                <!-- Post Stats -->
                <div class="d-flex text-muted small fs-5">
                    <auth-only>
                        <div id="likes-@post.Id"
                             hx-post="/Posts/LikePost?handler=Like"
                             hx-include="this"
                             hx-target="#likes-@post.Id"
                             hx-swap="outerHTML">

                            @Html.AntiForgeryToken()
                            <input type="hidden" name="postId" value="@post.Id"/>
                            <button type="submit" class="btn btn-link p-0 me-3 text-muted text-decoration-none fs-5">
                                <i class="bi bi-heart me-1"></i>@post.LikesCount
                            </button>
                        </div>
                    </auth-only>
                    <anon-only>
                        <a asp-page="/Account/Login"
                           class="btn btn-link p-0 me-3 text-muted text-decoration-none fs-5">
                            <i class="bi bi-heart me-1"></i>@post.LikesCount
                        </a>
                    </anon-only>

                    <a asp-page="/Posts/Details" asp-route-id="@post.Id"
                       class="btn btn-link p-0 me-3 text-muted text-decoration-none fs-5">
                        <i class="bi bi-chat me-1"></i>@post.CommentsCount
                    </a>
                    <a asp-page="/Posts/Details" asp-route-id="@post.Id"
                       class="btn btn-link p-0 text-muted text-decoration-none fs-5">
                        <i class="bi bi-eye me-1"></i>@post.ViewsCount
                    </a>
                </div>
            </div>
        </div>
    }

    <!-- Pagination -->
    <nav aria-label="Posts pagination">
        <ul class="pagination justify-content-center">
            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link" asp-route-pageNumber="@(Model.CurrentPage - 1)">Previous</a>
            </li>
            @for (var i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                    <a class="page-link" asp-route-pageNumber="@i">@i</a>
                </li>
            }
            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                <a class="page-link" asp-route-pageNumber="@(Model.CurrentPage + 1)">Next</a>
            </li>
        </ul>
    </nav>
</div>

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
