@page
@model Web.Pages.IndexModel
@{
    ViewData["Title"] = "Home";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Poster</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-light">

<div class="container py-4" style="max-width: 600px;">
    <h4 class="fw-bold mb-4">Latest Posts</h4>

    @foreach (var post in Model.Posts)
    {
        <div class="card shadow-sm mb-3">
            <div class="card-body">
                <!-- Post Header -->
                <div class="d-flex align-items-center mb-2">
                    <img src="~/images/default-avatar.png" class="rounded-circle me-2" width="40" height="40" alt="Avatar" />
                    <div>
                        <div class="fw-semibold">@post.AuthorUsername</div>
                        <small class="text-muted">@post.CreatedAt.ToString("MMM d, yyyy 'at' h:mm tt")</small>
                    </div>
                </div>

                <!-- Post Content -->
                <p class="mb-2">@post.Content</p>

                @*<!-- Post Stats -->
                <div class="d-flex text-muted small">
                    <div class="me-3">
                        <i class="bi bi-heart me-1"></i>@post.LikesCount
                    </div>
                    <div class="me-3">
                        <i class="bi bi-chat me-1"></i>@post.CommentsCount
                    </div>
                    <div>
                        <i class="bi bi-eye me-1"></i>@post.ViewsCount
                    </div>
                </div>*@

                @*<!-- Comments (Collapsible) -->
                @if (post.CommentsCount > 0)
                {
                    <button class="btn btn-link p-0 mt-2" type="button" data-bs-toggle="collapse" data-bs-target="#comments-@post.Id">
                        View Comments (@post.CommentsCount)
                    </button>

                    <div class="collapse mt-2" id="comments-@post.Id">
                        @foreach (var comment in post.Comments)
                        {
                            <div class="border-top pt-2 mt-2">
                                <small class="fw-semibold">@comment.AuthorUsername</small>
                                <div>@comment.Content</div>
                                <small class="text-muted">@comment.CreatedAt.ToString("MMM d, yyyy h:mm tt")</small>
                            </div>
                        }
                    </div>
                }*@
            </div>
        </div>
    }

    <!-- Pagination -->
    <nav aria-label="Posts pagination">
        <ul class="pagination justify-content-center">
            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link" asp-route-pageNumber="@(Model.CurrentPage - 1)">Previous</a>
            </li>
            @for (var i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                    <a class="page-link" asp-route-pageNumber="@i">@i</a>
                </li>
            }
            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                <a class="page-link" asp-route-pageNumber="@(Model.CurrentPage + 1)">Next</a>
            </li>
        </ul>
    </nav>
</div>

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
