@page
@model Web.Pages.Posts.AllPosts

@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en">
<head>
</head>
<body>
<div>
    <h2>Posts</h2>

    <table class="table">
        <thead>
        <tr>
            <th>Author</th>
            <th>Content</th>
            <th>Created At</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var post in Model.Posts)
        {
            <tr>
                <td>@post.AuthorUsername</td>
                <td>@post.Content</td>
                <td>@post.CreatedAt.ToString("g")</td>
            </tr>
        }
        </tbody>
    </table>
</div>
</body>
</html>