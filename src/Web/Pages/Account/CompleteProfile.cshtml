@page
@model Web.Pages.CompleteProfile

@{
    Layout = null;
    ViewData["Title"] = "Complete Profile";
}
    
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Complete profile</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-light d-flex align-items-center justify-content-center min-vh-100 overflow-hidden">

    <div class="card shadow-sm p-4 position-relative" style="max-width: 400px; width: 100%;">
    <h4 class="text-center mb-4 fw-semibold">Complete Your Profile</h4>
    <form method="post" asp-antiforgery="true">
        <div class="mb-3">
            <label asp-for="Dto.Username" class="form-label">Username</label>
            <input asp-for="Dto.Username" class="form-control" type="text" required />
            <span asp-validation-for="Dto.Username" class="text-danger"></span>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <button type="submit" class="btn btn-primary w-100 fw-semibold">Save</button>
    </form>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>