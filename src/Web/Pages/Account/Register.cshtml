@page
@model Web.Pages.Register
@{
    Layout = null;
    ViewData["Title"] = "Register";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Poster</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-light d-flex align-items-center justify-content-center min-vh-100 overflow-hidden">

<div class="card shadow-sm p-4 position-relative" style="max-width: 400px; width: 100%;">
    <!-- Return Button (Top-Left Corner) -->
    <a asp-page="/Index" class="btn btn-link position-absolute top-0 start-0 mt-2 ms-2 p-0 text-decoration-none">
        <i class="bi bi-arrow-return-left"></i> Back
    </a>
    
    <!-- Title -->
    <h4 class="text-center mb-4 fw-semibold">Create your account</h4>
    
    <!-- Register Form -->
    <form method="post" asp-antiforgery="true">
        <div class="mb-3">
            <label asp-for="Dto.Email" class="form-label">Email</label>
            <input asp-for="Dto.Email" type="email" class="form-control" placeholder="email@example.com"/>
            <span asp-validation-for="Dto.Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Dto.Password" class="form-label">Password</label>
            <input asp-for="Dto.Password" type="password" class="form-control" placeholder="********"/>
            <span asp-validation-for="Dto.Password" class="text-danger"></span>
        </div>

        <!-- Validation Summary -->
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <button type="submit" class="btn btn-primary w-100 fw-semibold">
            Sign Up
        </button>
    </form>

    <!-- Login Link -->
    <p class="text-center mt-3 mb-0">
        Already have an account?
        <a asp-page="/Account/Login" class="text-decoration-none">Log in</a>
    </p>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
