@model IEnumerable<Application.DTOs.PostAggregateDto>

@foreach (var post in Model)
{
    <div class="card shadow-sm mb-3" id="post-@post.Post.Id" data-post-id="@post.Post.Id">
        <div class="card-body">
            <!-- Post Header -->
            <div class="d-flex align-items-center mb-2">
                <a asp-page="/Account/Profile" asp-route-identifier="@post.Post.AuthorUsername" class="d-flex align-items-center text-decoration-none user-profile-link"
                   style="color: inherit">
                    <img src="@Url.Content("~/" + post.Post.AuthorAvatarPath)"
                         class="rounded-circle me-2" width="40" height="40" alt="Avatar" />

                    <span class="d-flex flex-column">
                        <span class="fw-semibold text-decoration-none text-dark">
                            @post.Post.AuthorUsername
                        </span>
                        <small class="text-muted">@post.Post.CreatedAt.ToString("MMM d, yyyy 'at' h:mm tt")</small>
                    </span>
                </a>
            </div>

            <!-- Post Content (clickable only if clicked, but text selectable) -->
            <a asp-page="/Posts/Details" asp-route-id="@post.Post.Id"
               class="text-decoration-none text-dark post-content-link"
               style="user-select: text;"
               draggable="false">
                
                <p class="mb-2" style="white-space: pre-wrap; user-select: text">@post.Post.Content</p>
                
                @if (post.Post.IsTruncated)
                {
                    <span class="text-primary fw-semibold">Show more</span>
                }
            </a>
            
                @if (post.Post.VideoFileID is not null || (post.Post.ImageFileIDs is not null && post.Post.ImageFileIDs.Any())) // prevent rendering if no media
                {
                    var mediaItems = new List<string>();
                    if (post.Post.VideoFileID is not null)
                    {
                        mediaItems.Add($"/videos/{post.Post.VideoFileID}");
                    }
                    if (post.Post.ImageFileIDs is not null)
                    {
                        mediaItems.AddRange(post.Post.ImageFileIDs.Select(id => $"/images/{id}"));
                    }

                    var carouselId = $"mediaCarousel_{post.Post.Id}"; // ID for each post's media carousel
                    <div id="@carouselId" class="carousel slide mt-3">
                        <div class="carousel-inner rounded shadow-sm" style="height: 320px;">
                            @for (int i = 0; i < mediaItems.Count; i++)
                            {
                                var isVideo = mediaItems[i].StartsWith("/videos/");
                                <div class="carousel-item @(i == 0 ? "active" : "") h-100">
                                    @if (isVideo)
                                    {
                                        <video class="d-block w-100 h-100 object-fit-cover" controls muted loop preload="metadata" poster="" data-fallback="/uploads/content-not-found.png">
                                            <source src="@mediaItems[i]" type="video/mp4"/>
                                            Your browser does not support the video tag.
                                        </video>
                                    }
                                    else
                                    {
                                        <div class="ratio ratio-16x9 rounded shadow-sm" style="max-height: 320px;">
                                            <img src="@mediaItems[i]" class="d-block w-100 h-100 object-fit-cover" alt="Post Media" data-fallback="/uploads/content-not-found.png" />
                                        </div>
                                    }
                                </div>
                            }
                        </div>

                        @if (mediaItems.Count > 1)
                        {
                            <button class="carousel-control-prev align-self-center" type="button" data-bs-target="#@carouselId" data-bs-slide="prev" style="width: auto; height: auto; padding: 0.5rem;">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next align-self-center" type="button" data-bs-target="#@carouselId" data-bs-slide="next" style="width: auto; height: auto; padding: 0.5rem;">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                        }
                    </div>
                }
            
            <hr/>
            
            <!-- Post Stats -->
            <partial name="Shared/Posts/_PostStatsPartial" model="post"/>
                
        </div>
    </div>
}

<auth-only>
    <partial name="Shared/Posts/_DeletePostFormPartial" />
</auth-only>

<script src="js/defaultSrcImage.js"></script>

<auth-only>
    <script src="js/viewPostHandler.js"></script>
</auth-only>