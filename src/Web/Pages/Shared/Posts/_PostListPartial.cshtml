@using Application.Contracts
@model IEnumerable<Application.DTOs.PostAggregateDto>
@inject ICurrentUserService CurrentUser

@foreach (var post in Model)
{
    <div class="card shadow-sm mb-3" id="post-@post.Post.Id" data-post-id="@post.Post.Id">
        <div class="card-body">
            <!-- Post Header -->
            <div class="d-flex align-items-center mb-2">
                <a asp-page="/User/Details" asp-route-id="@post.Post.AuthorAvatarPath">
                    <img src="@Url.Content("~/" + post.Post.AuthorAvatarPath)" 
                         class="rounded-circle me-2" width="40" height="40" alt="Avatar" />
                </a>
                <div>
                    <a asp-page="/User/Details" asp-route-id="@post.Post.AuthorUsername" 
                       class="fw-semibold text-decoration-none text-dark">
                        @post.Post.AuthorUsername
                    </a>
                    <br />
                    <small class="text-muted">@post.Post.CreatedAt.ToString("MMM d, yyyy 'at' h:mm tt")</small>
                </div>
            </div>

            <!-- Post Content (clickable only if clicked, but text selectable) -->
            <p class="mb-2">
                <a asp-page="/Posts/Details" asp-route-id="@post.Post.Id" 
                   class="text-decoration-none text-dark post-content-link" 
                   style="white-space: pre-wrap; user-select: text;"
                   draggable="false">@post.Post.Content</a>
                
                @if (post.Post.IsTruncated)
                {
                    <br/>
                    <a asp-page="/Posts/Details" asp-route-id="@post.Post.Id"
                       class="text-primary text-decoration-none fw-semibold">Show more</a>
                }
            
                <!-- Post Video -->
                @if (post.Post.VideoFileID is not null)
                {
                    <video class="w-100 rounded shadow-sm mt-2"
                           style="max-height: 320px;"
                           controls muted loop preload="metadata">
                        <source src="/videos/@post.Post.VideoFileID" type="video/mp4"> @*/videos/guid is the endpoint form minimal api*@
                        Your browser does not support the video tag.
                    </video>
                }
            </p>
            
            <hr/>
            
            <!-- Post Stats -->
            <partial name="Shared/Posts/_PostStatsPartial" model="post"/>
                
        </div>
    </div>
}
<auth-only>
<script>
    document.body.addEventListener('htmx:afterSwap', (e) => {
        if (e.target.id === 'posts-container' || e.target.id === 'loader') {
            document.querySelectorAll("[data-post-id]").forEach(postElement => {
                if (!postElement._watching) {
                    startWatchingPost(postElement, postElement.dataset.postId);
                    postElement._watching = true;
                }
            });
        }
    });
    function isCenterLineOverlapping(postElement) {
        const postRect = postElement.getBoundingClientRect();
        const lineY = window.innerHeight / 2;
        return postRect.top <= lineY && postRect.bottom >= lineY;
    }

    function startWatchingPost(postElement, postId) {
            let viewed = false;
            let timer = null;
        function checkOverlap() {
            if (viewed) return;

            if (isCenterLineOverlapping(postElement)) {
                if (!timer) {
                    timer = setTimeout(() => {
                        sendView(postId);
                        viewed = true;
                    }, 3000); // after 3 seconds of being in view
                }
            } else {
                clearTimeout(timer);
                timer = null;
            }
        }

        window.addEventListener("scroll", checkOverlap);
        window.addEventListener("resize", checkOverlap);
        checkOverlap(); // Initial check
    }

    function sendView(postId) {
        fetch('/Posts/ViewPost', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ postID: postId })
        })
        .then(response => {
            if (!response.ok) {
                console.error('Failed to send view for post:', postId);
            } else {
                console.log('View sent for post:', postId);
                htmx.ajax('GET', `/Posts/ViewPost?postId=${postId}`, {
                    target: `#post-stats-${postId}`,
                    swap: 'outerHTML'
                });
            }
        })
        .catch(error => {
            console.error('Error sending view for post:', postId, error);
        });
    }
</script>
</auth-only>