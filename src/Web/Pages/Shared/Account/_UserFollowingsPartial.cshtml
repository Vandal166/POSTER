@model Application.ViewModels.UserProfileLoaderViewModel
@inject Application.Contracts.ICurrentUserService CurrentUser

@foreach (var user in Model.Following)
{
    <div class="card mb-3 shadow-sm">
        <div class="card-body d-flex align-items-center justify-content-between">
            <div class="d-flex align-items-center">
                <img src="@Url.Content("~/" + user.AvatarPath)"
                     alt="@user.Username's avatar"
                     class="rounded-circle me-3"
                     style="width:48px; height:48px; object-fit:cover;">
                <div>
                    <a asp-page="/Account/Profile" asp-route-identifier="@user.Username" class="fw-semibold text-dark text-decoration-none">
                        @user.Username
                    </a>
                </div>
            </div>
            <auth-only>
            @if (CurrentUser.ID != user.Id)
            {
                if (Model.Following.Any(f => f.Id != CurrentUser.ID)) // Check if the current user is following this user
                {
                    <form method="post" asp-page="/Account/RemoveFollow" class="d-inline">
                        <input type="hidden" name="userId" value="@user.Id" />
                        <button type="submit" class="btn btn-outline-danger btn-sm">
                            <i class="bi bi-x"></i> Unfollow
                        </button>
                    </form>
                }
                else
                {
                    <form method="post" asp-page="/Account/AddFollow" class="d-inline">
                        <input type="hidden" name="userId" value="@user.Id" />
                        <button type="submit" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-plus"></i> Follow
                        </button>
                    </form>
                }
            }
            </auth-only>
        </div>
    </div>
}