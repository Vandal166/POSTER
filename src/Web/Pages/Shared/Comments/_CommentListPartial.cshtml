@using Application.Contracts
@model IEnumerable<Application.DTOs.CommentAggregateDto>
@inject ICurrentUserService CurrentUser
@foreach (var comment in Model)
{
    <div class="card shadow-sm mb-2">
        <div class="card-body">
            <div class="d-flex align-items-center mb-2">
                <a asp-page="/User/Details" asp-route-id="@comment.Comment.AuthorAvatarPath">
                    <img src="@Url.Content("~/" + comment.Comment.AuthorAvatarPath)" 
                         class="rounded-circle me-2" width="40" height="40" alt="Avatar" />
                </a>
                <a asp-page="/User/Details" asp-route-id="@comment.Comment.AuthorUsername" 
                   class="fw-semibold text-decoration-none text-dark">
                    @comment.Comment.AuthorUsername
                </a>
                <small class="text-muted ms-2">@comment.Comment.CreatedAt.ToString("MMM d, yyyy 'at' h:mm tt")</small>
            </div>
            
            
            <p class="mb-0">@comment.Comment.Content</p>
            
            <hr/>
            
            <!-- Comment Stats -->
            <div class="d-flex justify-content-between align-items-center text-muted small fs-5">
                <div class="d-flex align-items-center">
                    <auth-only>
                        <div id="likes-@comment.Comment.Id"
                             hx-post="/Comments/ToggleCommentLike?handler=ToggleLike"
                             hx-include="this"
                             hx-target="#likes-@comment.Comment.Id"
                             hx-swap="outerHTML">

                            @Html.AntiForgeryToken()
                            <input type="hidden" name="commentId" value="@comment.Comment.Id"/>
                            <button type="submit" class="btn btn-link p-0 me-3 text-decoration-none fs-5 like-btn @(comment.IsLiked ? "text-pink" : "text-muted")">
                                <i class="bi bi-heart me-1"></i>@comment.LikeCount
                            </button>
                        </div>
                    </auth-only>
                    
                    <anon-only>
                        <a asp-page="/Account/Login" asp-route-returnUrl="@Context.Request.Path"
                           class="btn btn-link p-0 me-3 text-muted text-decoration-none fs-5 like-btn">
                            <i class="bi bi-heart me-1"></i>@comment.LikeCount
                        </a>
                    </anon-only>

                    <a asp-page="/Comments/Details" asp-route-id="@comment.Comment.Id" asp-route-returnUrl="@Context.Request.Path"
                       class="btn btn-link p-0 me-3 text-muted text-decoration-none fs-5 comment-btn">
                        <i class="bi bi-chat me-1"></i>@comment.CommentCount
                    </a>
                </div>
                <!-- Three Dots Dropdown -->
                <div class="dropdown">
                    <button class="btn btn-link p-0 text-muted text-decoration-none fs-5" type="button" id="commentOptionsDropdown"
                            data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-three-dots"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end shadow-sm" aria-labelledby="commentOptionsDropdown">
                        <auth-only>
                            @if (CurrentUser.Username == comment.Comment.AuthorUsername)
                            {
                                /*TODO implement deleting*/
                                <li>
                                    <form method="post" asp-page-handler="DeleteComment" asp-antiforgery="true" onsubmit="return confirm('Are you sure you want to delete this comment?');">
                                        <input type="hidden" name="CommentId" value="@comment.Comment.Id"/>
                                        <button type="submit" class="dropdown-item text-danger">Delete Comment</button>
                                    </form>
                                </li>
                            }
                            else
                            {
                                <li><button class="dropdown-item">Report Comment</button></li>
                            }
                        </auth-only>
                        <anon-only>
                            <li><a asp-page="/Account/Login" asp-route-returnUrl="@Context.Request.Path" class="dropdown-item">Log in to report</a></li>
                        </anon-only>
                        <li><button class="dropdown-item">Copy Link</button></li> @*TODO copy the actual link of the comment*@
                    </ul>
                </div>
            </div>
        </div>
    </div>
}