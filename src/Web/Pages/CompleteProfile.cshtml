@page
@model Web.Pages.CompleteProfile

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Complete Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <h2>Complete Your Profile</h2>
        <form method="post" class="mt-3">
            <div class="mb-3">
                <label asp-for="Dto.Username" class="form-label">Username</label>
                <input asp-for="Dto.Username" class="form-control" type="text" required />
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
        <div asp-validation-summary="ModelOnly" class="text-danger mt-2"></div>
    </div>
</body>
</html>